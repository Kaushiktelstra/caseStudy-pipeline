generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}
model Customer {
  id          Int      @id @default(autoincrement())
  first_name  String
  last_name   String
  email       String   @unique
  password    String
  phone_no    String
  address     String
  otp         Int?     // Store OTP temporarily
  isVerified  Boolean  @default(false) // Track verification status
  resetToken        String?
  resetTokenExpiry  DateTime?
  documents  Document[]
  services   Service[]
}

model Document {
  id                Int       @id @default(autoincrement())
  filePath          String
  customerId        Int
  verificationStatus String   // 'Pending', 'Verified', 'Failed'
 // Document upload time
  verificationDate  DateTime? // Time when document was verified or failed
  customer          Customer  @relation(fields: [customerId], references: [id])
}

model Service {
  id                Int       @id @default(autoincrement())
  name              String
  isActive          Boolean    @default(false)
  customerId        Int
  planId            Int       // Associate each service with a plan
  customer          Customer   @relation(fields: [customerId], references: [id])
  plan              Plan       @relation(fields: [planId], references: [id])
}

model Plan {
  id                    Int       @id @default(autoincrement())
  name                  String
  description           String
  price                 Float
  servicesIncluded      Json
  planType              String 
  services              Service[] // Track services associated with this plan
  serviceActivatedCount Int       @default(0)
   // Count of activated services for this plan
}
model Admin {
  id        Int     @id @default(autoincrement())
  name      String
  email     String  @unique
  password  String
  
}

